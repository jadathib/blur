platform :osx, '10.15'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Required by Flutter
require File.expand_path(File.join('..', 'Flutter', 'podhelper'), __FILE__)

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # This installs all Flutter + plugin pods for macOS correctly
  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
end

# ✅ Single post_install that keeps Flutter’s settings AND bumps the target
post_install do |installer|
  # Keep Flutter’s build settings (needed for FlutterMacOS)
  flutter_additional_macos_build_settings(installer)

  # Bump any lingering pods below 10.15
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      if config.build_settings['MACOSX_DEPLOYMENT_TARGET'].to_f < 10.15
        config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.15'
      end
    end
  end
end
